<section>

    <div class="container text-center">
    <div class="row">
      {{#each laptops}}
      <div class="col-lg-3 col-md-4 col-sm-6 col-xs-6 col-12">
        <div class="card" style="width: 16rem;margin-top: 5rem;background: rgb(230, 233, 236)">
          <img class="card-img-top" style="height: 14rem;width:16rem" src="/images/{{this.img}}" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">{{this.description}}</p>
            <a href="#" class="btn btn-primary">Add to Cart</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

</section>
<section class="vh-100" style="background:linear-gradient(rgb(241, 74, 74),rgb(241, 87, 113));height: 800px;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 ">

            <h3 class="mb-5 text-center">Sign in</h3>
            <form action="/signup" method="POST">

            <div class="form-outline mb-4">
              <label class="form-label" for="typeEmailX-2">Email</label>
              <input type="text" name="email" onkeyup="emailValidate()" placeholder="Your Email" id="typeEmailX-2" class="form-control form-control-lg" />
               <p id="errormsg1" style="color: tomato"></p>
            </div>

            <div class="form-outline mb-4">
              <label class="form-label" for="typePasswordX-2">Password</label>
              <input type="password" name="password" onkeyup="passwordValidate()" placeholder="Your Password" id="typePasswordX-2" class="form-control form-control-lg" />
              <p id="errormsg2" style="color: tomato;"></p>
            </div>
            
              
            {{#if err}}
              <p class="text-danger">{{err}}</p>
            {{/if}}
            <button class="btn btn-primary btn-lg btn-block" id="submit-button" onclick="validate()" type="submit">Login</button>
            </form>
            <hr class="my-4">

           
            

          </div>
        </div>
      </div>
    </div>
  </div>
</section>





 




